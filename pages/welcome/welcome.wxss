page {
  height: 100%;
  background: #405f80;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.user-name {
  margin-top: 100rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 3rpx;
}

.moto-container {
  margin-top: 200rpx;
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #fff;
  border-radius: 10rpx;
  text-align: center;
}

.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #fff;
}